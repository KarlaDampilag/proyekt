type User {
  id: ID! @id
  email: String! @unique
  password: String!
  role: String!
  verified: Boolean!
  name: String
  confirmEmailToken: String
  resetToken: String
  resetTokenExpiry: String
}

type Product {
  id: ID! @id
  name: String!
  salePrice: String!
  costPrice: String
  unit: String
  currency: String
  notes: String
  sku: String
  image: String
  largeImage: String
  categories: [Category!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  user: User!
}

type Category {
  id
  name: String!
}