enum Permission {
  ADMIN
  PRODUCT
  SALES
  EXPENSE
  INVENTORY
  CUSTOMER
  PERMISSIONUPDATE
}

enum SpecialSaleDeductionType {
  FLAT
  PERCENTAGE
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  role: String!
  permissions: [Permission!]! @scalarList(strategy: RELATION)
  verified: Boolean!
  name: String
  confirmEmailToken: String
  resetToken: String
  resetTokenExpiry: String
}

type Product {
  id: ID! @id
  name: String!
  salePrice: String!
  costPrice: String
  unit: String
  currency: String
  notes: String
  sku: String
  image: String
  largeImage: String
  categories: [String!] @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  user: User!
}

type Category {
  id: ID! @id
  name: String!
  user: User!
}

type Inventory {
  id: ID! @id
  user: User!
  name: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Address {
  id: ID! @id
  country: String
  street1: String
  street2: String
  city: String
  state: String
  zipCode: String
  user: User! @relation(name: "OwnerOfCustomer")
}

type Customer {
  id: ID! @id
  user: User!
  name: String!
  email: String
  phone: String
  address: Address
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type SpecialSaleDeduction {
  id: ID! @id
  type: SpecialSaleDeductionType!
  value: Int
}

type Sale {
  id: ID! @id
  timestamp: DateTime!
  user: User!
  customer: Customer
  discount: SpecialSaleDeduction @relation(name: "DiscountOfSale")
  tax: SpecialSaleDeduction @relation(name: "TaxOfSale")
  shipping: Int
  note: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type SaleItem {
  id: ID! @id
  sale: Sale!
  product: Product!
  quantity: Int!
  discount: SpecialSaleDeduction @relation(name: "DiscountOfSaleItem")
}